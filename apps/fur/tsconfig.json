{
  "exclude": ["node_modules"],
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": false,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "target": "ESNext",
    "types": ["vite/client"],
    "rootDir": "src",
    "outDir": "dist",
    "paths": { "@/*": ["./src/*"] },
  },
  "include": ["src"]
}
